[Unit]
Description=Set a random wallpaper

[Service]
Type=oneshot
ExecStartPre=/usr/bin/bash -c "/usr/bin/find %h/pictures/wallpaper/$(xrandr | grep ' connected [0-9]' | awk '{print $3}' | sed 's/+[0-9]+[0-9]//') \( -name \"*jpg\" -o -name \"*png\" \) -fprint /tmp/%u-wallpapers"
ExecStart=/usr/bin/bash -c "%h/.config/i3/bin/wallpaper $(sed -n $(($RANDOM % $(wc -l /tmp/%u-wallpapers | awk '{print $1}') + 1))p /tmp/%u-wallpapers)"
RemainAfterExit=no
